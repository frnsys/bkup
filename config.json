                "~/archives/media": "/mnt/crust/francis/media"
            },
            "never_delete": true
        }
    },
    "snapshot": {
        "pony.local": {
            "user": "ftseng",
            "mappings": {
                "~/archives/work": "~/Desktop/archives",
                "~/archives/projects": "~/Desktop/archives",
                "~/archives/STUFF": "~/Desktop/archives",
                "~/archives/graphics": "~/Desktop/archives",
