                "~/projects": "~/Desktop/repos",
                "~/STUFF": "~/Desktop/repos",
                "~/graphics": "~/Desktop/repos",
                "~/notes": "~/Desktop/repos",
                "~/Downloads": "~/Desktop",
                "/tmp/backitup_snapshot": "~/Desktop"
            },
            "externals": {
                "~/Desktop/archives": ["pony/francis", "Dump/francis", "outerspace/francis"],
                "~/Desktop/media": ["pony/francis", "Dump/francis", "outerspace/francis"],
                "~/Desktop/repos": ["pony/francis", "Dump/francis", "outerspace/francis"]
            },
