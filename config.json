            "never_delete": true
        },
        "raspberrypi.local": {
            "user": "ftseng",
            "mappings": {
                "~/archives/work": "/mnt/crust/francis/archives",
                "~/archives/projects": "/mnt/crust/francis/archives",
                "~/archives/STUFF": "/mnt/crust/francis/archives",
