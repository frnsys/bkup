{
    "backup": {
        "pony.local": {
            "user": "ftseng",
            "mappings": {
                "~/work": "~/Desktop/repos",
                "~/projects": "~/Desktop/repos",
                "~/STUFF": "~/Desktop/repos",
                "~/graphics": "~/Desktop/repos",
                "~/notes": "~/Desktop/repos"
            },
            "externals": {
                "~/Desktop/repos": ["pony/francis", "Dump/francis", "outerspace/francis"]
            }
        },
        "raspberrypi.local": {
            "user": "ftseng",
            "mappings": {
                "~/work": "/mnt/crust/francis/repos",
                "~/projects": "/mnt/crust/francis/repos",
                "~/STUFF": "/mnt/crust/francis/repos",
